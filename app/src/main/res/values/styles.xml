    </style>
    <style name="MyEditTextStyle2" parent="Widget.AppCompat.EditText">
        <item name="colorControlNormal">@color/colorPrimaryDark1</item>
        <item name="colorControlActivated">#d11472</item>
    </style>

</resources>

