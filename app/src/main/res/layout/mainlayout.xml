<?xml version = "1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android = "http://schemas.android.com/apk/res/android"
    xmlns:tools = "http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height = "match_parent" android:paddingLeft= "@dimen/activity_horizontal_margin"
    android:paddingRight = "@dimen/activity_horizontal_margin"
    android:paddingTop = "@dimen/activity_vertical_margin"
    android:paddingBottom = "@dimen/activity_vertical_margin"
    android:background="@drawable/paper2">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:weightSum="1"
                android:layout_weight="0.5">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">
                    <Button
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:id="@+id/button1"
                        android:background="@drawable/button_stroke"
                        android:theme="@style/ButtonStyle"
                        android:layout_margin="10dp"
                        android:text="Computer Systems Engineering"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:singleLine="false"
                        android:paddingBottom="10dp"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">
                    <Button
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:id="@+id/button2"
                        android:theme="@style/ButtonStyle"
                        android:text="Elements of Software Construction"
                        android:layout_margin="10dp"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:background="@drawable/button_stroke"
                        android:singleLine="false"
                        android:paddingBottom="10dp"/>

                </RelativeLayout>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:weightSum="1"
                android:layout_weight="0.5">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">
                    <Button
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:id="@+id/button3"
                        android:layout_margin="10dp"
                        android:background="@drawable/button_stroke"
                        android:theme="@style/ButtonStyle"
                        android:text="Probability and Statistics"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:paddingBottom="10dp"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">
                    <Button
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:id="@+id/button4"
                        android:theme="@style/ButtonStyle"
                        android:layout_margin="10dp"
                        android:text="2019Cohort1"
                        android:background="@drawable/button_stroke"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:paddingBottom="10dp"/>

                </RelativeLayout>
            </TableRow>

            <TableRow
                android:layout_width="fill_parent"
                android:layout_height="0dp"
                android:weightSum="1"
                android:layout_weight="0.5">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">
                    <Button
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:id="@+id/button5"
                        android:background="@drawable/button_stroke"
                        android:theme="@style/ButtonStyle"
                        android:text="2019Cohort2"
                        android:layout_margin="10dp"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:paddingBottom="10dp"/>

                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.5">
                    <Button
                        android:layout_width="170dp"
                        android:layout_height="150dp"
                        android:id="@+id/button6"
                        android:background="@drawable/button_stroke"
                        android:theme="@style/ButtonStyle"
                        android:text="2019Cohort3"
                        android:layout_margin="10dp"
                        android:textSize="18sp"
                        android:gravity="center"
                        android:paddingBottom="10dp"/>

                </RelativeLayout>
            </TableRow>

        </TableLayout>

    </LinearLayout>
</RelativeLayout>