<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/paper2">

    <TextView
        android:text="Broadcast Question"
        android:textSize="23sp"
        android:layout_width="wrap_content"
        android:textStyle="bold"
        android:layout_height="40dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:id="@+id/title"
        />

    <EditText
        android:id="@+id/quizq"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/c1"
        android:layout_alignStart="@+id/c1"
        android:layout_below="@+id/title"
        android:focusable="true"
        android:layout_marginTop="10dp"
        android:hint="Enter QUESTION"
        android:textColorHighlight="@color/colorPrimaryDark1"
        android:textColorHint="@color/hint" />

    <TextView
        android:id="@+id/c1"
        android:layout_width="wrap_content"
        android:layout_height="50dp"

        android:layout_alignLeft="@+id/c2"
        android:layout_alignStart="@+id/c2"
        android:layout_below="@+id/quizq"
        android:gravity="center"
        android:text="Choice 1:"
        android:textSize="20sp"
        android:textStyle="italic" />

    <EditText
        android:id="@+id/choice1"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_below="@+id/quizq"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/edit_style1"
        android:focusable="true"
        android:layout_marginBottom="10dp"
        android:hint="Enter Choice"
        android:textColorHighlight="@color/colorPrimaryDark1"
        android:textColorHint="@color/hint" />

    <TextView
        android:id="@+id/c2"
        android:layout_width="wrap_content"
        android:layout_height="50dp"

        android:layout_alignLeft="@+id/c3"
        android:layout_alignStart="@+id/c3"
        android:layout_below="@+id/choice1"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:text="Choice 2:"
        android:textSize="20sp"
        android:textStyle="italic" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/choice2"
        android:hint="Enter Choice"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"

        android:focusable = "true"
        android:textColorHighlight = "@color/colorPrimaryDark1"
        android:textColorHint = "@color/hint"
        android:layout_below="@+id/choice1"
        android:background="@drawable/edit_style1"
        />

    <TextView
        android:id="@+id/c3"
        android:layout_width="wrap_content"
        android:layout_height="50dp"

        android:layout_alignLeft="@+id/c4"
        android:layout_alignStart="@+id/c4"
        android:layout_alignTop="@+id/choice3"
        android:gravity="center"
        android:text="Choice 3:"
        android:textSize="20sp"
        android:textStyle="italic" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/choice3"
        android:hint="Enter Choice"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:focusable = "true"
        android:textColorHighlight = "@color/colorPrimaryDark1"
        android:textColorHint = "@color/hint"
        android:layout_below="@+id/choice2"
        android:background="@drawable/edit_style1"
        />

    <TextView
        android:id="@+id/c4"
        android:layout_width="wrap_content"
        android:layout_height="50dp"

        android:layout_alignTop="@+id/choice4"
        android:layout_toLeftOf="@+id/title"
        android:layout_toStartOf="@+id/title"
        android:gravity="center"
        android:text="Choice 4:"
        android:textSize="20sp"
        android:textStyle="italic" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/choice4"
        android:hint="Enter Choice"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:focusable = "true"
        android:textColorHighlight = "@color/colorPrimaryDark1"
        android:textColorHint = "@color/hint"
        android:layout_below="@+id/choice3"
        android:background="@drawable/edit_style1"
        />

    <TextView
        android:id="@+id/ans"
        android:layout_width="wrap_content"
        android:layout_height="50dp"

        android:layout_alignLeft="@+id/c4"
        android:layout_alignStart="@+id/c4"
        android:layout_alignTop="@+id/ANSWER"
        android:gravity="center"
        android:text="Answer:"
        android:textSize="20sp"
        android:textStyle="italic" />
    <EditText
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:id="@+id/ANSWER"
        android:hint="Enter Answer"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:focusable = "true"
        android:textColorHighlight = "@color/colorPrimaryDark1"
        android:textColorHint = "@color/hint"
        android:layout_below="@+id/choice4"
        android:background="@drawable/edit_style1"
        />
    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/submit"
        android:layout_below="@id/ANSWER"
        android:text="Submit"
        android:layout_marginTop="10dp"
        android:theme="@style/ButtonStyle"/>

</RelativeLayout>